<div class="container">
    <div class="row">
        <div class="col-md-6" id="{{avatar}}">
            <img src="{{avatar}}" alt="{{name}}" width="100%" height="500px">
        </div>
    </div>
    <form>
        <div class="row">
            <div class="form-group col-md-3">
                <label for="#id">ID:</label>
                <input id="id" class="form-control" type="text" value="{{_id}}" readonly>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-3">
                <label for="#name">Name:</label>
                <input id="name" class="form-control" type="text" value="{{name}}" readonly>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-3">
                <label for="#email">Email:</label>
                <input id="email" class="form-control" type="email" value="{{email}}" readonly>
            </div>
        </div>
    </form>
</div>